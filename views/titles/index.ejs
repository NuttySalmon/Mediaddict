<% include ../partials/header %> 

     <header class="jumbotron">
         <div class="container">
             <h1><span class="glyphicon glyphicon-tent"></span> Welcome To MediaAddict!</h1>
             <p>View our hand-picked titles from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/titles/new">Add New Title</a>
             </p>
              <p>
              <form action="/titles" method="GET" class="form-inline" id="title-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Title search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="title-grid">
        <% titles.forEach(function(title){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= title.image %>">
                   <div class="caption">
                       <h4><%= title.name %></h4>
                   </div>
                   <p>
                       <a href="/titles/<%= title._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
